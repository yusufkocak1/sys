<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:actionBarNavMode="tabs"
    tools:context="yube.com.siparisyonetimsistemi.AdminPanel"
    android:background="@android:color/white"
    >


    <EditText
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:hint="Kullanıcı Adı"
        android:backgroundTint="@android:color/primary_text_light"
        android:textColorHint="@android:color/primary_text_light"
        android:textColor="@android:color/primary_text_light"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:hint="Şifre"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="8dp"
        android:textColorHint="@android:color/primary_text_light"
        android:backgroundTint="@android:color/primary_text_light"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintLeft_toLeftOf="@+id/username" />

    <Button
        android:text="kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        tools:ignore="MissingConstraints"
        android:theme="@style/MyButton"
        android:textColor="@android:color/white"

        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/spinner"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="214dp"
        android:layout_height="44dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        app:layout_constraintRight_toRightOf="@+id/pass" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="368dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:id="@+id/recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
